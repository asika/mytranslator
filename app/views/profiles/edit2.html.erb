<h>編輯譯者資料</h>

<h1>Profile </h1>

<% if @profile.errors.any? %>
      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<%= form_for [current_user, @profile], :url => user_profile_path(current_user, @profile), :method => :patch, :html => { :multipart => true } do |f| %>

  <%= hidden_field_tag :next, "complete" %>
  
  <div class="form-group">
    <%= f.label :short_summary, t("profile.short_summary") %> <br />
    <%= f.text_field :short_summary, :placeholder => t("profile.short_summary_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :professional, t("profile.professional") %> <br />
    <%= f.text_area :professional, :placeholder => t("profile.professional_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :education, t("profile.education") %> <br />
    <%= f.text_area :education, :placeholder => t("profile.education_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :certification, t("profile.certification") %> <br />
    <%= f.text_area :certification, :placeholder => t("profile.certification_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :about, t("profile.about") %> <br />
    <%= f.text_area :about, :placeholder => t("profile.about_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :payment_info, t("profile.payment_info") %> <br />
    <%= f.text_area :payment_info, :placeholder => t("profile.payment_info_placeholder"), :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "送出", :class => "btn btn-primary" %>
  </div>
<% end %>