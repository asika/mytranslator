<div class="row">
  <div class="col-md-2">
    <%= render :partial => 'users/sidebar', :locals => {:active => 'user'} %>
  </div>
  <div class="col-md-10">
    <h2><%= t("views.users.edit.title") %></h2>

    <div class="row">
      <div class="col-md-6">
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :username, t("views.users.edit.username") %> <br />
            <%= f.text_field :username, :class => "form-control", :disabled => true %>
          </div>

          <div class="form-group">
            <%= f.label :email, t("views.users.edit.email") %> <br />
            <%= f.text_field :email, :class => "form-control", :disabled => true %>
          </div>

          <div class="form-group">
            <%= f.label :first_name, t("views.users.edit.first_name") %> <br />
            <%= f.text_field :first_name, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, t("views.users.edit.last_name") %> <br />
            <%= f.text_field :last_name, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phone, t("views.users.edit.phone") %> <br />
            <%= f.text_field :phone, :class => "form-control" %>
          </div>

          <%= f.submit t("views.profiles.edit.button_update"), :class => "btn btn-primary" %>
        <% end %>

      </div>
      <div class="col-md-6"></div>
    </div>

  </div>
</div>